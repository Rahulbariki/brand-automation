{
    "builds": [
        {
            "src": "backend/app/main.py",
            "use": "@vercel/python"
        },
        {
            "src": "brandnova-ui/package.json",
            "use": "@vercel/static-build",
            "config": {
                "distDir": "dist"
            }
        }
    ],
    "routes": [
        {
            "src": "/api/(.*)",
            "dest": "backend/app/main.py"
        },
        {
            "src": "/assets/(.*)",
            "dest": "brandnova-ui/dist/assets/$1"
        },
        {
            "src": "/(.*)",
            "dest": "brandnova-ui/dist/index.html"
        }
    ]
}