{
    "version": 2,
    "builds": [
        {
            "src": "api/index.py",
            "use": "@vercel/python",
            "config": {
                "maxLambdaSize": "50mb"
            }
        },
        {
            "src": "brandnova-ui/package.json",
            "use": "@vercel/static-build",
            "config": {
                "distDir": "brandnova-ui/dist"
            }
        }
    ],
    "routes": [
        {
            "src": "/api/(.*)",
            "methods": [
                "OPTIONS"
            ],
            "dest": "api/index.py",
            "headers": {
                "Access-Control-Allow-Origin": "*",
                "Access-Control-Allow-Methods": "GET, POST, PUT, DELETE, OPTIONS",
                "Access-Control-Allow-Headers": "Content-Type, Authorization",
                "Access-Control-Allow-Credentials": "true"
            }
        },
        {
            "src": "/api/(.*)",
            "dest": "api/index.py"
        },
        {
            "src": "/assets/(.*)",
            "dest": "brandnova-ui/dist/assets/$1"
        },
        {
            "src": "/(.*\\.(js|css|json|png|jpg|jpeg|gif|svg|ico|woff|woff2|ttf|eot|webp|mp3|wav))$",
            "dest": "brandnova-ui/dist/$1"
        },
        {
            "src": "/(.*)",
            "dest": "brandnova-ui/dist/index.html"
        }
    ]
}